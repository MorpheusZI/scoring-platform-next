generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

enum DocumentType {
  KomitmenBawahan
  KomitmenAtasan
  Catatan
}

// Define the User table
model User {
  UserID    Int        @id @default(autoincrement())
  username  String
  password  String
  email     String     @unique
  manager   String?
  Documents Document[]
}

// Define the Document table
model Document {
  DocID       Int          @id @default(autoincrement())
  DocContent  String?
  DocHTML     String?
  DocType     DocumentType
  updated_at  DateTime     @updatedAt
  created_at  DateTime     @default(now())
  user        User?        @relation(fields: [OwnerUserID], references: [UserID])
  OwnerUserID Int?
}
